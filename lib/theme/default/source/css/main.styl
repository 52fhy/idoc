@import('reset.styl');
global-reset()
@import('vendor.styl');
@import('markdown.styl');
@import('highlight.styl');

tocwidth = 220px

*
    box-sizing: border-box;
body 
    background:#F6F6F6 url(../img/background.png)
body,html
    height:100%

.warpper
    display:box
    width:100%
    height:100%
    .page-toc,.markdown-body
        height:100%
    .markdown-body
        width:calc(100% - 220px)
        overflow:auto
    .page-toc
        position: relative;
        width:tocwidth
        border-right: 1px solid #bbb
        box-shadow: 0 0 20px #ccc
        background:#fff
        padding: 10px
        overflow-y: auto
        overflow-x: hidden
        font-family: "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif !important;
        ul
            list-style-type: none
            margin: 0
            a 
                display: block
                padding: 3px 0
                color: #151515
                text-decoration: none
                font-weight:bold
                line-height: 16px
                font-size: 14px
                &:hover
                    color:red
                    text-decoration: underline
            li:first-child
                border-bottom: 1px solid #EDEDED
                text-align: center
                line-height: 23px
                padding: 0 0 8px 0
                margin-bottom: 7px
            li 
                padding-left:3px
            ul
                margin:0 0 0 10px
                list-style-type: square
                padding: 0 0 0 9px
                a 
                    font-size:90%
                    font-weight:normal
                li:first-child
                    border-bottom: 0
                    text-align: left
                    line-height: 23px
                    padding: 0 0 0 0
                    margin-bottom: 0
            