
.markdown-body
    padding: 30px
    word-wrap: break-word
    overflow: hidden
    font-family: "Helvetica Neue", Helvetica, "Segoe UI", Arial, freesans, sans-serif
    font-size: 16px
    line-height: 1.4em
    color:#333
    &>*:first-child
        margin-top: 0 !important
    strong
        font-weight: bold
    em 
        font-style:italic
    h1,h2,h3,h4,h5,h6
        position: relative
        margin-top: 1em
        margin-bottom: 16px
        font-weight: bold
        line-height: 1.4
    h1,h2
        border-bottom: 1px solid #eee
    h1
        font-size: 2.25em
        line-height: 1.2
        padding-bottom: 0.3em
    h2
        padding-bottom: 0.3em
        font-size: 1.75em
        line-height: 1.225
        border-bottom:1px dashed #eee
    blockquote
        padding: 0 15px
        color: #777
        border-left: 4px solid #ddd
        margin: 0;
        &>:last-child
            margin-bottom: 0
        &>:first-child
            margin-top: 0
    p,blockquote,ul,ol,dl,table,pre
        margin-top: 0;
        margin-bottom: 16px
    ul,ol
        padding-left: 1.4em
        list-style:initial
    ol
        list-style-type: decimal
    ol ol, ul ol
        list-style-type: lower-roman;
    ul ul ol, ul ol ol, ol ul ol, ol ol ol
        list-style-type: lower-alpha;
    pre
        padding: 16px
        overflow: auto
        background-color: #E7E7E7
        border-radius: 3px
        word-break: break-all
        word-wrap: break-word 
        font: 16px Consolas, "Liberation Mono", Menlo, Courier, monospace;
        code
            // letter-spacing: 1px
            background-color:transparent
            color: inherit
            line-height: 18px
            display: block

        code:before,code:after,tt:before,tt:after
            letter-spacing: 0;
            content: "";
    code,tt
        padding: 0
        padding-top: 0.1em
        padding-bottom: 0.1em
        margin: 0
        background-color: rgba(0,0,0,0.04)
        border-radius: 3px
        color: #6A6A6A;
    code:before,code:after,tt:before,tt:after
        content: "\00a0"
    table
        width: 100%
        border-collapse: collapse
        border-spacing: 0
        max-width: 100%
        display: block
        background-color: transparent
        th,td
            border: 1px solid #ddd
            padding: 4px 10px
        th
            font-weight: bold
            background: #F3F3F3
        tr:nth-child(2n) 
            background-color: #f8f8f8

